generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ProductStatus {
  ACTIVE
  HIDDEN
}

enum VariantStatus {
  ACTIVE
  HIDDEN
}

enum DeliveryMethod {
  CDEK
  YANDEX
  PICKUP
}

enum OrderStatus {
  NEW
  CONFIRMED
  CANCELLED
  SHIPPED
}

model Product {
  id          String        @id @default(cuid())
  title       String
  slug        String        @unique
  category    String?
  description String        @default("")
  status      ProductStatus @default(ACTIVE)

  colors ProductColor[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([category])
}

model ProductColor {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  name      String
  slug      String
  sortOrder Int    @default(0)

  images   Image[]
  variants Variant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, slug])
  @@index([productId, sortOrder])
}

model Variant {
  id      String       @id @default(cuid())
  colorId String
  color   ProductColor @relation(fields: [colorId], references: [id], onDelete: Cascade)

  size     String
  sizeSort Int

  sku    String        @unique
  price  Int
  stock  Int           @default(0)
  status VariantStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([colorId, size])
  @@index([colorId])
  @@index([sizeSort])
  @@index([size])
  @@index([status])
}

model Image {
  id      String       @id @default(cuid())
  colorId String
  color   ProductColor @relation(fields: [colorId], references: [id], onDelete: Cascade)

  url       String
  alt       String @default("")
  sortOrder Int    @default(0)

  @@index([colorId, sortOrder])
}

model Order {
  id        String      @id @default(cuid())
  createdAt DateTime    @default(now())
  status    OrderStatus @default(NEW)

  fullName String
  phone    String
  comment  String?

  deliveryMethod  DeliveryMethod
  deliveryAddress String?
  deliveryPrice   Int            @default(0)

  subtotal Int
  total    Int

  items OrderItem[]
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  variantId String

  title String
  slug  String
  color String?
  size  String

  unitPrice Int
  qty       Int
  linePrice Int
}
